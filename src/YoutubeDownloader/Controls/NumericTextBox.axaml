<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="https://github.com/arudenkun/YoutubeDownloader">
    <SolidColorBrush x:Key="IncorrectInputBrush">Crimson</SolidColorBrush>
    <!--  ReSharper disable once Xaml.StaticResourceNotResolved  -->
    <ControlTheme
        x:Key="{x:Type local:NumericTextBox}"
        BasedOn="{StaticResource SukiTextBox}"
        TargetType="local:NumericTextBox">
        <Style Selector="^:incorrecttext">
            <Setter Property="Foreground" Value="{StaticResource IncorrectInputBrush}" />
        </Style>
    </ControlTheme>
</ResourceDictionary>