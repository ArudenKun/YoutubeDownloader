<UserControl
    x:Class="YoutubeDownloader.Views.Pages.SettingsPageView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:yd="https://github.com/arudenkun/YoutubeDownloader"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="yd:SettingsPageViewModel"
    mc:Ignorable="d">
    <Grid RowDefinitions="Auto, Auto, *">
        <TextBox
            Grid.Row="0"
            Text="Settings" />
        <Button
            Grid.Row="1"
            Command="{Binding OpenAuthDialogCommand}"
            Content="Auth" />
        <yd:NativeWebView
            Name="WebView"
            Grid.Row="2"
            Source="{Binding Search}"
            UserDataFolder="{Binding UserDataFolder}" />
    </Grid>
</UserControl>