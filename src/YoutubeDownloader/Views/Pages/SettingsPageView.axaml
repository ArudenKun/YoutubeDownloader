<UserControl
    x:Class="YoutubeDownloader.Views.Pages.SettingsPageView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv2="clr-namespace:Avalonia.Controls;assembly=Avalonia.WebView2"
    xmlns:yd="https://github.com/arudenkun/YoutubeDownloader"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="yd:SettingsPageViewModel"
    mc:Ignorable="d">
    <Grid RowDefinitions="Auto, Auto, *">
        <TextBox
            Grid.Row="0"
            Text="{Binding Search}" />
        <Button
            Grid.Row="1"
            Command="{Binding ProcessSearchCommand}"
            Content="Play" />
        <wv2:WebView2
            Name="WebView"
            Grid.Row="2"
            CreationProperties="{Binding CreationProperties}"
            Source="{Binding Url}" />
    </Grid>
</UserControl>